<%= render "shared/header" %>
<div class="container text-center">
  <div class="row">
    <section class="col-sm-2">
      <div class="d-flex flex-column flex-shrink-0 p-3 text-black bg-white" style="height: 100%;">
        <a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
          <span class="fs-4">Categories</span>
        </a>
        <hr>
        <ul class="nav nav-pills flex-column mb-auto">
          <li class="nav-item">
            <%= link_to "Back to all products", controller: "products", action: "index" %>
          </li>
          <% @categories.each do |category| %>
            <li>
              <a href="#" class="nav-link text-white">
                <svg class="bi me-2" width="16" height="16">
                  <use xlink:href="#speedometer2"></use>
                </svg>
                <%= link_to "#{category.title.capitalize}", products_path(category: category) %>
              </a>
            </li>
          <% end %>
        </ul>
        <hr>
      </div>
    </section>
    <main class="col-sm-10">
      <div class="album py-5 bg-light">
        <div class="container">

          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% @products.each do |product| %>
              <div class="col">
                <div class="card shadow-sm">
                  <div style='width:100%;height:225px;'>
                    <%= image_tag image_url(product.image), style: 'width:100%;height:100%;' %>
                  </div>
                  <div class="card-body">
                    <p class="card-text">
                    <p><%= product.description %></p>
                    <div class="d-flex justify-content-between align-items-center">
                      <button type="button" class="btn btn-secondary"><%= link_to "View", product %></button>
                      <small class="text-muted">Price: <%= product.price %></small>
                    </div>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </main>
  </div>
</div>
<%= render 'shared/footer' %>