<h1>All Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Image</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to "#{product.name}", product %></td>
      <td><%= product.price %></td>
      <td><%= image_tag image_url(product.image, height:'10', width:'10') %></td>
    </tr>
  <% end %>
</table>