<%= render "shared/header" %>
<div class="container">
<h1>All Products</h1>

<ul>
  <% @categories.each do |category| %>
    <li><%= link_to "#{category.title}", products_path(category: category) %>
  <% end %>
  <li><%= link_to "back to all products", controller: "products", action: "index" %></li>
</ul>


<div class="container text-center">
  <div class="row">
    <div class="col">
      Column
    </div>
    <div class="col">
      Column
    </div>
    <div class="col">
      Column
    </div>
  </div>
</div>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Image</th>
  </tr>
  <% @products.each do |product| %>
    <tr>
      <td><%= link_to "#{product.name}", product %></td>
      <td><%= product.price %></td>
      <td><%= image_tag image_url(product.image), width: 80, height: 80 %></td>
    </tr>
  <% end %>
</table>
  <%= render 'shared/footer' %>
</div>
