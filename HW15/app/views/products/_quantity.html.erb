<%= turbo_frame_tag dom_id(@product) do %>
  <% if @line_item.quantity < 1 %>
    <%= button_to 'Add to cart', line_items_path(@line_item), class: "btn btn-outline-dark flex-shrink-0" %>
  <% else %>
    <%= button_to "+", line_item_path(@line_item.id, act: 'add', product_id: @product.id), method: :patch %>
    <%= @line_item.quantity %>
    <%= button_to "-", line_item_path(@line_item.id, product_id: @product.id), method: :patch %>
  <% end %>
<% end %>
