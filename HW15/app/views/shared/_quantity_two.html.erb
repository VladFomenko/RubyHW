<%#= turbo_frame_tag 'change_button' do %>
  <%# if LineItem.all_product_with_cart(current_cart.id).count < 1 %>
    <%#= button_to 'Add to cart', line_items_path(product_id: @product.id), data: { turbo_frame: 'change_button' }, class: "btn btn-outline-dark flex-shrink-0" %>
  <%# else %>
    <%#= button_to "+", line_item_change_quantity_path(product_id: (params['product_id']), act: 'add'), method: :post %>
    <%#= current_cart.line_items.find_by(product_id: params['product_id']).quantity %>
    <%#= button_to "-", line_item_change_quantity_path(product_id: (params['product_id'])), method: :post %>
  <%# end %>
<%# end %>