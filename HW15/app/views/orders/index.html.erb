<main class="col-sm-10">
  <div class="album py-5 bg-light">
    <div class="container">
      <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
        <table class="table">
          <tr>
            <td>#</td>
            <td>Number</td>
            <td>status</td>
          </tr>
          <% @orders.each_with_index do |order, index| %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= link_to "#{order.id}", order_path(order.id) %></td>
              <td><%= order.status %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</main>